{{!-- views/dashboard.hbs --}}

{{!-- Page-specific CSS --}}
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/dashboard.css">

<div class="dashboard-container">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo-container text-center py-3">
            <h2 class="logo">Xpenso</h2>
        </div>
        <div class="text-center my-3">
            <img src="https://cdn-icons-png.flaticon.com/512/4140/4140037.png" alt="Avatar" class="avatar-img mb-2">
            <h5 class="user-name" id="userName">User Name</h5>
        </div>
        <ul class="nav-menu px-3">
            <li class="nav-item active">
                <a href="#"><i class="fas fa-th-large"></i> Dashboard</a>
            </li>
            <li class="nav-item">
                <a href="/income"><i class="fas fa-wallet"></i> Income</a>
            </li>
            <li class="nav-item">
                <a href="/expense"><i class="fas fa-money-check-alt"></i> Expense</a>
            </li>
            <li class="nav-item">
                <a href="/contact"><i class="fas fa-headset"></i> Support</a>
            </li>
        </ul>
        <div class="logout-container mt-auto px-3">
            <button id="logoutBtn" class="btn btn-link logout-btn text-start">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <header class="dashboard-header">
            <div class="header-left">
                <button class="menu-toggle" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h2>Dashboard</h2>
            </div>
            <div class="header-right">
            <button id="themeToggle" class="theme-toggle">
            <i class="fas fa-sun"></i>
            </button>
            </div>
        </header>

        <div class="dashboard-content">
            <div class="row">
                <div class="col-md-8">
                    <div class="card summary-card">
                        <div class="card-body">
                            <h3>Monthly Summary</h3>
                            <div class="summary-stats">
                                <div class="stat-item">
                                    <span class="stat-label">Income</span>
                                    <span class="stat-value income">₹0.00</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-label">Expenses</span>
                                    <span class="stat-value expenses">₹0.00</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-label savings">Savings</span>
                                    <span class="stat-value savings">₹0.00</span>    <!-- Same here -->
                                    <span class="stat-change positive">+0%</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card chart-card">
                        <div class="card-body">
                            <h3>Expense Breakdown</h3>
                            <canvas id="expenseChart"></canvas>
                        </div>
                    </div>

                    <div class="card chart-card">
                        <div class="card-body">
                            <h3>Earnings Breakdown</h3>
                            <canvas id="incomeChart"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card recent-transactions">
                        <div class="card-body">
                            <h3>Recent Transactions</h3>
                            <ul class="transaction-list">
                                {{!-- Adding Recent Transaction thorugh JS function --}}
                            </ul>
                            <a href="#" class="btn btn-outline-primary btn-sm view-all">View All Transactions</a>
                        </div>
                    </div>
                    <div id="transactionModal" class="modal">
                        <div class="modal-content">
                            <span class="close" id="closeModal">&times;</span>
                            <div class="card-body">
                                <h3>All Transactions</h3>
                                <ul class="transaction-list all-transactions-list">
                                    {{!-- Adding All Transactions through Js function --}}
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card budget-card">
                        <div class="card top-categories-card">
                            <div class="card-body">
                                <h3>Top 3 Spending Categories (Past Month)</h3>
                                <div id="top-categories" class="top-categories-list">
                                    <!-- Data populated by JS -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

{{!-- Page-specific JS --}}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/dashboard.js"></script>
